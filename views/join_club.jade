extends layout

block content
  form.form-signin(method="POST" action='')
    h1.h3.mb-3.mt-5.font-weight-normal Enter the secret password to join the club

    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password' placeholder='Password' required='true' name="password")

    if error
      h3.text-danger YOU GOT THE PASSWORD WRONG!
    
    button.btn.btn-lg.btn-primary.btn-block.mt-3(type='submit') Submit
