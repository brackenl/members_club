extends layout

block content
  form.form-signin(method="POST" action='')
    h1.h3.mb-3.mt-5.font-weight-normal Please log in

    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email' placeholder='Email address' required='true' autofocus='' name="username")

    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password' placeholder='Password' required='true' name="password")

    if errors
      ul
        for error in errors
          li.text-danger!= error.msg
    
    button.btn.btn-lg.btn-primary.btn-block.mt-3(type='submit') Sign in
